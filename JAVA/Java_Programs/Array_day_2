package com.nit;

public class TargetSum {

	public static void main(String[] args) {
		int[] arr = {2, 7, 4, 8, 3, 5, 1, 6};
		int targetSum = 9;
		for(int i=0;i<arr.length;i++)
		{
			for(int j=i+1;j<arr.length;j++)
			{
				if(arr[i]+arr[j]==targetSum)
					System.out.println("("+arr[i]+","+arr[j]+")");
			}
		}
	}
}

