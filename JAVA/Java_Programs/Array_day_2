package com.nit;
public class FindMaxAndMin {

	public static void main(String[] args) {
		int[] arr = {15, 3, 7, 22, 5, 9, 12};
        int min=arr[0];
        int max=arr[0];//15
        for(int i=0;i<arr.length;i++)
        {
        	if(arr[i]>max)
        		max=arr[i];
        	if(arr[i]<min)
        		min=arr[i];
        }
        System.out.println("Min:"+min+"\nmax:"+max);

	}

}
