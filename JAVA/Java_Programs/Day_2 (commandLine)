Basic Salary



public class BasicSalary {
    public static void main(String[] args) {

        int basic = Integer.parseInt(args[0]);
        int HRA = Integer.parseInt(args[1]);
        int Conveyance  = Integer.parseInt(args[2]);
        int entertainmentAllowance = Integer.parseInt(args[3]);

        int result = basic + HRA + Conveyance + entertainmentAllowance;
    

        System.out.println("total salary of person : "+ result);
    }
}



