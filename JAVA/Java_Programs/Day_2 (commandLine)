Dominos Bill
-------------


package basic.BillGenerate;
public class BillGenerate
{
    public static void main(String [] args)
    {   
        int chickenRoll = Integer.parseInt(args[0]) ;
        int vegetablePuffs = Integer.parseInt(args[1]) ;
        int discount = Integer.parseInt(args[2]);
    
        System.out.println("chickenRoll :" +(chickenRoll*4) );
        System.out.println("vegetablePuffs :"+ (vegetablePuffs*3));
        System.out.println("discount :"+(discount));
        System.out.println("final bill :" + ((chickenRoll*4)+(vegetablePuffs*3)-(discount)));
    }
}



or


class DominosBill {

    public static void main(String []args){

    int chicken_rolls = 60;
    int vegetable_puffs = 25;
    int discount = 50;


    
    int chicken = Integer.parseInt(args[0]);
    int puff = Integer.parseInt(args[1]);

    
    System.out.println("You have selected "+ chicken + " chicken_rolls");
    System.out.println("You have selected "+ puff + " vegetable_puffs");

    int result = ((chicken*chicken_rolls) + (puff*vegetable_puffs)) - discount;

    System.out.print("So Your total bill is: " + result + "with a discount of " + discount);

    }

}



///////////////////////////////////////////////////////////////////////////////



Factorial
-----------

public class Factorial {
    public static void main(String[] args) {
        int num = Integer.parseInt(args[0]);

        int result = 1;

        while (num != 0) {
            result = result * num;
            num--;
        }

        System.out.println("Factorial is : "+ result);
    }
    
}



///////////////////////////////////////////////////////////////////////////

Fahrenheit To Celsius
----------------------

public class FahrenheitToCelsius {
    public static void main(String[] args) {
        int Fahrenheit  = Integer.parseInt(args[0]);
        int celsius = ((Fahrenheit-32)*5)/9;

        System.out.println("celsius : "+ celsius);
    }
}



///////////////////////////////////////////////////////////////////////////


Palindrome or not
--------------------


public class PalindromeOrNot {
    public static void main(String[] args) {
        int num = Integer.parseInt(args[0]);

        int originalNum = num;
        int storeResult = 0;
        while (num !=0) {
            int last = num%10;
            storeResult = storeResult*10 + last;
            num = num/10;
        }

        if(originalNum == storeResult){
            System.out.println("Palindrome");
        } else {
            System.out.println("Not a Palindrome");
        }


    }
}


