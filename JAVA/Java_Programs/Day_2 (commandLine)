Armstrong

public class Armstrong {
    public static void main(String[] args) {
        int num = Integer.parseInt(args[0]);
        int originalNum = num;
        int count = 0;
        while(num != 0 ){
            num = num/10;
            count++;
        }
        num = originalNum;

        int res = 0;

        while(num != 0){
            int last = num%10;
            res = last^count + res;
            num = num/10;   
        }

        if(originalNum == res){
            System.out.println("Armstrong");
        } else {
            System.out.println("Not a Armstrong");
        }

    }
    
}




