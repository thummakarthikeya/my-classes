package Elc;
import java.util.*;

import Blc.EmployeInfo;

public class Employee {
	public static void main(String[] args) {
		
		EmployeInfo karthikeya = new EmployeInfo();
		
		karthikeya.setEmployeeData();
		karthikeya.getEmployeeData();
		
		
		
	}

}



package Blc;

import java.util.Scanner;

public class EmployeInfo {
	

 int employeeId;
 String employeeName;
 double employeeSalary;
 
 public void setEmployeeData() {
	 
	 	Scanner sc = new Scanner(System.in);
		System.out.println("Enter Employe id :");
		employeeId = Integer.parseInt(sc.nextLine());
		
		System.out.println("Enter Employe name :");
		employeeName = sc.nextLine();
		
		System.out.println("Enter Employe salary :");
		employeeSalary = Double.parseDouble(sc.nextLine());
	 
 }
 public void getEmployeeData(){
	 System.out.println("the emplouyee id is :"+employeeId);
	 System.out.println("the emplouyee employeeName is :"+employeeName);
	 System.out.println("the emplouyee employeeSalary is :"+employeeSalary);
 }


}
