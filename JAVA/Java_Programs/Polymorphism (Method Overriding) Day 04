Solution Code




import java.util.*;

public class ShoppingMall {

    public static void generateBill(Customer cust, double[] prices) {
        cust.calculateBill(prices);
    }

    public static void main(String args[]) {

        Scanner sc = new Scanner(System.in);

        int choice = Integer.parseInt(sc.nextLine());  // 1,2,3

        String name = sc.nextLine();  // customer name

        int numberOfItems = Integer.parseInt(sc.nextLine());

        String arrProductName[] = new String[numberOfItems];
        double arrProductPrice[] = new double[numberOfItems];

        for (int i = 0; i < numberOfItems; i++) {
            arrProductName[i] = sc.next();
            arrProductPrice[i] = sc.nextDouble();
        }

        switch (choice) {
            case 1 -> {
                Customer gc = new GeneralCustomer(name);
                generateBill(gc, arrProductPrice);
            }
            case 2 -> {
                Customer pc = new PrimeCustomer(name);
                generateBill(pc, arrProductPrice);
            }
            case 3 -> {
                Customer vip = new VIPCustomer(name);
                generateBill(vip, arrProductPrice);
            }
            default -> System.out.println("Invalid choice!");
        }

        sc.close();
    }
}


// -----------------------------------------------------
//                CUSTOMER (BASE CLASS)
// -----------------------------------------------------
class Customer {
    protected String name;
    protected double add;    // total amount

    public Customer(String name) {
        if (name == null || name.trim().isEmpty()) {
            System.out.println("Name cannot be empty.");
            System.exit(0);
        }
        this.name = name;
    }

    public double calculateBill(double... prices) {
        add = 0;  // RESET TOTAL FOR EACH CUSTOMER

        for (double p : prices) {
            if (p <= 0) {
                System.out.println("Prices cannot be negative or zero.");
                System.exit(0);
            }
            add += p;
        }
        return add;
    }
}


// -----------------------------------------------------
//                GENERAL CUSTOMER
// -----------------------------------------------------
class GeneralCustomer extends Customer {
    public GeneralCustomer(String name) {
        super(name);
    }

    @Override
    public double calculateBill(double... prices) {
        add = super.calculateBill(prices);

        System.out.println("Welcome to Hyderabad Mall!");
        System.out.println("Customer: " + name);
        System.out.println("Total Cost RS : " + add);
        System.out.println("Discount: No discount for General Customers.");
        System.out.println("Final Amount RS : " + add);
        return add;
    }
}


// -----------------------------------------------------
//                PRIME CUSTOMER
// -----------------------------------------------------
class PrimeCustomer extends Customer {
    protected double discountRate = 10.0;

    public PrimeCustomer(String name) {
        super(name);
    }

    @Override
    public double calculateBill(double... prices) {
        add = super.calculateBill(prices);

        double discountAmount = add * discountRate / 100;
        double finalAmount = add - discountAmount;

        System.out.println("Welcome to Hyderabad Mall!");
        System.out.println("Customer: " + name);
        System.out.println("Total Cost RS : " + add);
        System.out.println("Discount RS : " + discountAmount);
        System.out.println("Final Amount RS : " + finalAmount);

        return finalAmount;
    }
}


// -----------------------------------------------------
//                VIP CUSTOMER
// -----------------------------------------------------
class VIPCustomer extends Customer {
    protected double discountRate = 15.0;

    public VIPCustomer(String name) {
        super(name);
    }

    @Override
    public double calculateBill(double... prices) {
        add = super.calculateBill(prices);

        double discountAmount = add * discountRate / 100;
        double finalAmount = add - discountAmount;

        System.out.println("Welcome to Hyderabad Mall!");
        System.out.println("Customer: " + name);
        System.out.println("Total Cost RS : " + add);
        System.out.println("Discount RS : " + discountAmount);
        System.out.println("Final Amount RS : " + finalAmount);

        return finalAmount;
    }
}
