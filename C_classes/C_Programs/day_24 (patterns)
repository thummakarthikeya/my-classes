                    #include <stdio.h>

int main() {
    int n=5;
    int x=1;
    for(int i=1;i<=9;i++) {
      for(int j=n;j>=1;j--){
           if(j>x){
               printf("%3c", ' ');
           } else{
               printf("%3d",j);
           }
      }
           if(i<n) {
            x++;
           
           }else {
               x--;
               
           }
      printf("\n");
      }
        
     
}


