// Online C compiler to run C program 

// function name reverse
// parameters : int n
// return type int

#include <stdio.h>
int reverse(int n){
    int a = n;
    int rev = 0;
    while(a!=0){
        int last = a%10;
        rev = rev*10+last;
        a= a/10;
    }
    return rev;
}

int main() {
    printf("Enter a number : ");
   int val;
   scanf("%d",&val);
   int res = reverse(val);
   printf("%d", res);
    return 0;
}




