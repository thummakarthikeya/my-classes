#include <stdio.h>

int main() {
    int n=5;
    int x=n;
    for(int i=1;i<=n*2-1;i++) {
      for(int j=1;j<=n;j++){
           if(j<x){
               printf("%3c", ' ');
           } else{
               printf("%3c",'*');
           }
      }
           if(i<n) {
            x--;
           
           }else {
               x++;
               
           }
      printf("\n");
      }
        
     
}



