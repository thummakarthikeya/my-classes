// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int n=5;
    int x=n,y=n;
    for(int i=1;i<=n;i++) {
      for(int j=1;j<=n*2-1;j++){
           if(j<x || j>y){
               printf("%3c", ' ');
           } else{
               printf("%3c",'*');
           }
      }
            x--;
            y++;
      printf("\n");
      }
        
     
}

