        * * * * * * *        6
          * * * * *          7
            * * *            8
              *              9
      1 2 3 4 5 6 7 8 9





*/
#include <stdio.h>

int main() {
    int n=5;
    int x=n,y=n;
    for(int i=1;i<=n*2-1;i++) {
      for(int j=1;j<=n*2-1;j++){
           if(j<x || j>y){
               printf("%3c", ' ');
           } else{
               printf("%3c",'*');
           }
      }
           if(i<n) {
            x--;
            y++;
           }else {
               x++;
               y--;
           }
      printf("\n");
      }
        
     
}


